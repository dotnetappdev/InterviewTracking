<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:InterviewTracking.Maui.ViewModels"
             x:Class="InterviewTracking.Maui.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            
            <Label Text="Interview Tracker"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>

            <Label Text="Welcome Back!"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email"/>

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"/>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                   HorizontalOptions="Center"/>

            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    Margin="0,10,0,0"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>

            <Button Text="Create Account"
                    Command="{Binding NavigateToRegisterCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>

            <BoxView HeightRequest="1" 
                     Color="{AppThemeBinding Light=LightGray, Dark=Gray}"
                     Margin="0,20,0,10"/>

            <Label Text="OR"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Button Text="Continue Offline"
                    Command="{Binding SkipLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Label Text="Use the app without an account (offline mode)"
                   FontSize="12"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
