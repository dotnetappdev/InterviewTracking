<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:InterviewTracking.Maui.ViewModels"
             x:Class="InterviewTracking.Maui.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="Settings" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            
            <!-- Appearance Section -->
            <Frame BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Appearance" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Dark Mode" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="0" Grid.Column="1"
                                IsToggled="{Binding DarkMode}"
                                VerticalOptions="Center"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" 
                             Color="{AppThemeBinding Light=LightGray, Dark=Gray}"/>
                    
                    <Label Text="Toggle between light and dark themes"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Notifications Section -->
            <Frame BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Notifications" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Enable Notifications" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="0" Grid.Column="1"
                                IsToggled="{Binding NotificationsEnabled}"
                                VerticalOptions="Center"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" 
                             Color="{AppThemeBinding Light=LightGray, Dark=Gray}"/>
                    
                    <Label Text="Receive notifications for upcoming interviews"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Sync Section -->
            <Frame BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="API Configuration" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Use API" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="0" Grid.Column="1"
                                IsToggled="{Binding UseApi}"
                                VerticalOptions="Center"/>
                    </Grid>
                    
                    <VerticalStackLayout Spacing="5" IsVisible="{Binding UseApi}">
                        <Label Text="API URL" FontSize="14"/>
                        <Entry Text="{Binding ApiUrl}" 
                               Placeholder="https://localhost:7000/api/"
                               Keyboard="Url"/>
                        <Label Text="Enter the base URL for your API server"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Sync Section -->
            <Frame BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="False"
                   IsVisible="{Binding UseApi}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Synchronization" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Enable Sync" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="0" Grid.Column="1"
                                IsToggled="{Binding SyncEnabled}"
                                VerticalOptions="Center"/>
                        
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Auto Sync" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="1" Grid.Column="1"
                                IsToggled="{Binding AutoSync}"
                                VerticalOptions="Center"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" 
                             Color="{AppThemeBinding Light=LightGray, Dark=Gray}"/>
                    
                    <Label Text="{Binding LastSyncTime, StringFormat='Last synced: {0:MMM dd, yyyy hh:mm tt}'}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                           IsVisible="{Binding LastSyncTime, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"/>
                    
                    <Button Text="Sync Now" 
                            Command="{Binding SyncNowCommand}"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Account Section -->
            <Frame BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Account" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Button Text="Change Password" 
                            Command="{Binding ChangePasswordCommand}"
                            HorizontalOptions="Fill"/>
                    
                    <Button Text="Delete Account" 
                            Command="{Binding DeleteAccountCommand}"
                            BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#B71C1C}"
                            TextColor="{AppThemeBinding Light=#D32F2F, Dark=White}"
                            HorizontalOptions="Fill"/>
                    
                    <BoxView HeightRequest="1" 
                             Color="{AppThemeBinding Light=LightGray, Dark=Gray}"/>
                    
                    <Button Text="Logout" 
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="{AppThemeBinding Light=Orange, Dark=DarkOrange}"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- App Info -->
            <Label Text="Interview Tracking v1.0"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
