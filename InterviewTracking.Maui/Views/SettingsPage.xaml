<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:InterviewTracking.Maui.ViewModels"
             x:Class="InterviewTracking.Maui.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Settings" FontSize="24" FontAttributes="Bold"/>
            
            <Label Text="Appearance"/>
            <HorizontalStackLayout Spacing="10">
                <Label Text="Dark Mode" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding DarkMode}"/>
            </HorizontalStackLayout>
            
            <Label Text="Notifications"/>
            <HorizontalStackLayout Spacing="10">
                <Label Text="Enable Notifications" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding NotificationsEnabled}"/>
            </HorizontalStackLayout>
            
            <Label Text="Sync"/>
            <HorizontalStackLayout Spacing="10">
                <Label Text="Enable Sync" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding SyncEnabled}"/>
            </HorizontalStackLayout>
            
            <Button Text="Sync Now" Command="{Binding SyncNowCommand}"/>
            <Button Text="Logout" BackgroundColor="Red" Command="{Binding LogoutCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
